<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffeeCream"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.ViewScheduleListActivity">

    <!-- DAILY Button -->
    <Button
        android:id="@+id/btnDaily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/coffeeBrown"
        android:text="DAILY daily"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp" />

    <!-- New Event Button -->
    <Button
        android:id="@+id/btnNewEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/coffeeBrown"
        android:text="New Event"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp" />

    <!-- Current Week Text -->
    <TextView
        android:id="@+id/currentWeekTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="Current week: 10/02/2025 - 16/02/2025"
        android:textColor="@color/coffeeBrown"
        android:textSize="16sp" />

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/coffeeBrown"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/monthYearTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Feb 2021"
            android:textAlignment="center"
            android:textColor="@color/coffeeDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/coffeeBrown"
            android:text="@string/forward"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Week Day Labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <!-- 7 days -->
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="SUN" android:gravity="center"
            android:textColor="@color/coffeeDark" android:textSize="14sp" android:textStyle="bold" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="MON" android:gravity="center"
            android:textColor="@color/coffeeDark" android:textSize="14sp" android:textStyle="bold" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="TUE" android:gravity="center"
            android:textColor="@color/coffeeDark" android:textSize="14sp" android:textStyle="bold" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="WED" android:gravity="center"
            android:textColor="@color/coffeeDark" android:textSize="14sp" android:textStyle="bold" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="THUR" android:gravity="center"
            android:textColor="@color/coffeeDark" android:textSize="14sp" android:textStyle="bold" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="FRI" android:gravity="center"
            android:textColor="@color/coffeeDark" android:textSize="14sp" android:textStyle="bold" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="SAT" android:gravity="center"
            android:textColor="@color/coffeeDark" android:textSize="14sp" android:textStyle="bold" />
    </LinearLayout>

    <!-- Day numbers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <!-- 7 days -->
        <TextView android:id="@+id/day_1" android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="1" android:gravity="center"
            android:textColor="@color/black" android:textSize="16sp" />
        <TextView android:id="@+id/day_2" android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="2" android:gravity="center"
            android:textColor="@color/black" android:textSize="16sp" />
        <TextView android:id="@+id/day_3" android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="3" android:gravity="center"
            android:textColor="@color/black" android:textSize="16sp" />
        <TextView android:id="@+id/day_4" android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="4" android:gravity="center"
            android:textColor="@color/black" android:textSize="16sp" />
        <TextView android:id="@+id/day_5" android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="5" android:gravity="center"
            android:textColor="@color/black" android:textSize="16sp" />
        <TextView android:id="@+id/day_6" android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="6" android:gravity="center"
            android:textColor="@color/black" android:textSize="16sp" />
        <TextView android:id="@+id/day_7" android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="7" android:gravity="center"
            android:textColor="@color/black" android:textSize="16sp" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendarRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:background="@color/white"
        android:elevation="2dp" />
</LinearLayout>
